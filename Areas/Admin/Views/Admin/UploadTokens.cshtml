@model InnerMetrixWeb.Areas.Admin.Models.UploadTokens
@{
    ViewBag.Title = "File Uploader";
    Layout = "~/Views/Shared/_LandingPage.cshtml";
}


<br />
<div class="container">
    @using (Html.BeginForm("UploadTokens", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        <div class="alert alert-success" role="alert" id="aInfo" style="visibility:hidden">Uploading Success!</div>
        <div class="well">
            <div class="row">
                <div class="col-lg-12">
                    @Html.EditorFor(model => model.File, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off",
        @placeholder = "browse file", @type = "file", @name = "file", @id = "file"} })
                    @*<input type="file" name="file" id="file" class="form-control" />*@
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-lg-12">
                    <div class="col-lg-10">
                        <div class="progress" style="visibility : hidden">
                            <div id="pbUpload" class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%; visibility : hidden">
                                Uploading.....
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2">
                        <input id="btnSubmit" type="submit" value="Upload File" class="btn btn-primary btn-md" />
                        @*<button id="btnSubmit" class="btn btn-default" type="button"></button>*@
                    </div>
                </div>
            </div>
        </div>

    }
</div>

@section Scripts {

    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/toastr")
    @Scripts.Render("~/bundles/common")
    @Scripts.Render("~/bundles/jquery-3.3.1-min")

    

}







